@model ClinicaVeterinariaWeb.Data.Entities.Client

@{
    ViewData["Title"] = "Details";
}


 <body>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <h2>Detalhes</h2>

   <div>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <dl class="row">
                   <dt class = "col-sm-3">
                      @Html.DisplayNameFor(model => model.FullName)
                    </dt>
                   <dd class = "col-sm-9">
                         @Html.DisplayFor(model => model.FullName)
                   </dd>
                   <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.Document)
                   </dt>
                   <dd class = "col-sm-9">
                        @Html.DisplayFor(model => model.Document)
                   </dd>
                   <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.FixedPhone)
                   </dt>
                   <dd class = "col-sm-9">
                         @Html.DisplayFor(model => model.FixedPhone)
                   </dd>
                   <dt class = "col-sm-3">
                          @Html.DisplayNameFor(model => model.CellPhone)
                  </dt>
                  <dd class = "col-sm-9">
                           @Html.DisplayFor(model => model.CellPhone)
                  </dd>
                  <dt class="col-sm-3">
                           @Html.DisplayNameFor(model => model.Email)
                  </dt>
                  <dd class="col-sm-9">
                           @Html.DisplayFor(model => model.Email)
                  </dd>
                  <dt class = "col-sm-3">
                           @Html.DisplayNameFor(model => model.Address)
                   </dt>
                  <dd class = "col-sm-9">
                           @Html.DisplayFor(model => model.Address)
                  </dd>
                  <dt class = "col-sm-3">
                           @Html.DisplayNameFor(model => model.AnimalName)
                  </dt>
                  <dd class = "col-sm-9">
                           @Html.DisplayFor(model => model.AnimalName)
                  </dd>
                  <dt class = "col-sm-3">
                           @Html.DisplayNameFor(model => model.Species)
                  </dt>
                  <dd class = "col-sm-9">
                            @Html.DisplayFor(model => model.Species)
                  </dd>
                  <dt class = "col-sm-3">
                            @Html.DisplayNameFor(model => model.AnimalAge)
                  </dt>
                  <dd class = "col-sm-9">
                           @Html.DisplayFor(model => model.AnimalAge)
                  </dd>
                  <dt class = "col-sm-3">
                           @Html.DisplayNameFor(model => model.Breed)
                  </dt>
                  <dd class = "col-sm-9">
                            @Html.DisplayFor(model => model.Breed)
                  </dd>
                  <dt class = "col-sm-3">
                            @Html.DisplayNameFor(model => model.Note)
                  </dt>
                  <dd class = "col-sm-9">
                             @Html.DisplayFor(model => model.Note)
                    </dd>
        
                </dl>
            </div>

             <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.AnimalImageUrl))
                {
                     <img src="@Url.Content(Model.AnimalImageUrl)" alt="Image" style="width:300px;height:450px;max-width:100%;height:auto;" />
                }
             </div>
        </div>
    </div>

         <div>
                 <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
                 <a asp-action="Index">Voltar</a>
         </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/scripts.js"></script>
        <!-- * * Activate your form at https://startbootstrap.com/solution/contact-forms * *-->        
        <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>

 </body>
</html>
