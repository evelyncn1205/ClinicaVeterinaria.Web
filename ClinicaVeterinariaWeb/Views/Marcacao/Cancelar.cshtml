@model ClinicaVeterinariaWeb.Models.CancelarViewModel
@{
    ViewData["Title"] = "Cancelar";
}

<h1>Cancelar</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Cancelar">
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" asp-items="Model.Cliente" class="form-control"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Voltar</a>
            </div>
        </form>

    </div>
</div>
